{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title text-center">
                User registration
            </h3>
        </div>
        <div class="panel-body">
            {{ form_start(form, {
                'action' : path('user_register'),
                'method' : 'POST',
                'attr': {
                    'novalidate': 'novalidate'
                },
            }) }}
            <div class="form-group">
                {{ form_label(form.firstname) }}
                <div class="bg-danger">{{ form_errors(form.lastname) }}</div>
                {{ form_widget(form.firstname, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'user_firstname',
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.lastname) }}
                <div class="bg-danger">{{ form_errors(form.lastname) }}</div>
                {{ form_widget(form.lastname, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'user_lastname',
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.pseudo) }}
                <div class="bg-danger">{{ form_errors(form.pseudo) }}</div>
                {{ form_widget(form.pseudo, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'user_pseudo',
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email) }}
                <div class="bg-danger">{{ form_errors(form.email) }}</div>
                {{ form_widget(form.email, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'user_email',
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.phonenumber) }}
                <div class="bg-danger">{{ form_errors(form.phonenumber) }}</div>
                {{ form_widget(form.phonenumber, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'user_phonenumber',
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.address) }}
                <div class="bg-danger">{{ form_errors(form.address) }}</div>
                {{ form_widget(form.address, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'user_address',
                    }
                }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.birthdate) }}
                <div class="bg-danger">{{ form_errors(form.birthdate) }}</div>
                {{ form_widget(form.birthdate, {
                    'attr': {
                        'class': 'form-control',
                        'id': 'user_birthdate',
                    }
                }) }}
            </div>
            <button type="submit" class="btn btn-primary" role="button">Register</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
